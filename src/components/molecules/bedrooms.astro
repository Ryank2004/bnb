    }

    .bedrooms-text span {
        font-size: 14px;
    }

    .bedroom-overlay {
        position: fixed;
        inset: 0;
        background: rgba(0, 0, 0, 0.8);
        align-items: center;
        justify-content: center;
        cursor: zoom-out;
        z-index: 1000;
        transition:
            opacity 0.2s ease-out,
            visibility 0.2s ease-out;
        opacity: 0;
        visibility: hidden;
        pointer-events: none;
        display: flex;
    }

    .bedroom-overlay.active {
        opacity: 1;
        visibility: visible;
        pointer-events: auto;
    }

    .bedroom-overlay img {
        max-width: 90%;
        max-height: 90%;
