    <button class="see-more-btn" id="show-all-btn">
        show all photos <span><Arrow /></span>
    </button>
    <!-- <a href="/" class="see-more-btn">show all photos <span><Arrow /></span></a> -->
</section>

<script is:inline>
    const showAllBtn = document.getElementById("show-all-btn");
    const fullGallery = document.getElementById("full-gallery");
    const galleryBack = document.getElementById("gallery-back");

    // Show all photos functionaliteit
    showAllBtn.addEventListener("click", (e) => {
        e.preventDefault();
        fullGallery.classList.add("active");
        document.body.style.overflow = "hidden"; // Voorkom body scroll
    });

    galleryBack.addEventListener("click", () => {
        fullGallery.classList.remove("active");
        document.body.style.overflow = ""; // Herstel body scroll
    });

    // Wacht tot GSAP en Lenis klaar zijn
    function initImageGridAnimations() {
        if (!window.lenisReady || !window.gsap) {
            setTimeout(initImageGridAnimations, 100);
            return;
        }

        console.log("ðŸŽ¨ Starting image grid animations...");

        // ===================================
        // ðŸŽ­ SCROLL-BASED OPACITY STAGGER
        // ===================================

        // Set initial state - alleen opacity
        window.gsap.set(".image-wrapper", {
            opacity: 0,
        });

        // Scroll-based stagger animatie (linked aan scrollpositie)
        window.gsap.to(".image-wrapper", {
            opacity: 1,
            duration: 1,
            stagger: {
                amount: 0.8, // Stagger duur: 0.8 seconden
                from: "start", // Start met eerste image
                ease: "none", // Linear voor smooth scroll sync
            },
            scrollTrigger: {
                trigger: ".image-grid",
                start: "30% 85%", // Start wanneer sectie in view komt
                end: "65% 60%", // End wanneer sectie bijna uit view is
                scrub: 1, // ðŸŽ¯ KEY: Animatie volgt scrollpositie (1 sec delay)
                // scrub: true,
                // markers: true,
            },
        });

        // SplitType text splitting
        const sectionTitle = new window.SplitType(".image-grid-title", {
            types: "lines, words",
            lineClass: "line",
        });

        // Create line wrappers voor masking
        sectionTitle.lines.forEach((line) => {
            const wrapper = document.createElement("div");
            wrapper.classList.add("line-wrapper-title");
            line.parentNode.insertBefore(wrapper, line);
            wrapper.appendChild(line);

            // Voeg reveal overlay toe
            const overlay = document.createElement("div");
            overlay.classList.add("section-reveal-overlay");
            overlay.classList.add("texture-image");
            wrapper.appendChild(overlay);
        });

        // Tekst op normale positie
        window.gsap.to(".line", {
            y: 0,
        });

        window.gsap.to(".section-reveal-overlay", {
            x: "110%",
            scrollTrigger: {
                trigger: ".image-grid-title",
                start: "top 90%",
                end: "65% 60%",
                toggleActions: "play none none reverse",
                scrub: 1,
                // markers: true,
            },
        });

        // ===================================
        // ðŸŽ¨ HOVER ANIMATIES
        // ===================================

        document.querySelectorAll(".thumb").forEach((img) => {
            img.addEventListener("mouseenter", () => {
                window.gsap.to(img, {
                    scale: 1.06,
                    duration: 0.3,
                    ease: "power2.out",
                });
            });

            img.addEventListener("mouseleave", () => {
                window.gsap.to(img, {
                    scale: 1,
                    rotation: 0,
                    duration: 0.3,
                    ease: "power2.out",
                });
            });
        });

        // ===================================
        // ðŸŽ­ OPTIONEEL: BUTTON ANIMATIE
        // ===================================

        window.gsap.fromTo(
            ".see-more-btn",
            {
                opacity: 0,
                y: 20,
            },
            {
                opacity: 1,
                y: 0,
                duration: 0.6,
                ease: "power2.out",
                delay: 0.3, // Kleine delay na images
                scrollTrigger: {
                    trigger: ".see-more-btn",
                    start: "top 90%",
                    toggleActions: "play none none reverse",
                },
            },
        );

        console.log("âœ… Image grid animations initialized");
    }

    // ===================================
    // ðŸš€ START ANIMATIES
    // ===================================

    // Luister naar lenisReady event
    document.addEventListener("lenisReady", initImageGridAnimations);

    // Fallback als event al afgevuurd is
    if (window.lenisReady) {
        initImageGridAnimations();
    }
</script>

<style>
    /* REVEAL OVERLAY */
    :global(.section-reveal-overlay) {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: var(--light-color);
        z-index: 2;
        transform: translateX(0); /* Start positie: bedekt tekst */
    }
    .image-grid {
        display: flex;
        flex-direction: column;
        padding: 200px 25px;
    }

    .grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        grid-template-rows: repeat(4, 1fr);
        grid-column-gap: 12px;
        grid-row-gap: 12px;
    }

    .image-wrapper {
        border: solid 1.5px var(--primary-color);
        overflow: hidden;
    }

    .image-wrapper:nth-child(1) {
        grid-area: 1 / 1 / 3 / 3;
    }
    .image-wrapper:nth-child(2) {
        grid-area: 3 / 1 / 4 / 2;
    }
    .image-wrapper:nth-child(3) {
        grid-area: 3 / 2 / 4 / 3;
    }
    .image-wrapper:nth-child(4) {
        grid-area: 4 / 1 / 5 / 2;
    }
    .image-wrapper:nth-child(5) {
        grid-area: 4 / 2 / 5 / 3;
    }

    .lightbox {
        position: fixed;
        inset: 0;
        background: rgba(0, 0, 0, 0.8);
        align-items: center;
        justify-content: center;
        cursor: zoom-out;
        z-index: 1000;
        transition:
            opacity 0.2s ease-out,
            visibility 0.2s ease-out;
        opacity: 0;
        visibility: hidden;
        pointer-events: none;
        display: flex;
    }

    .lightbox.active {
        opacity: 1;
        visibility: visible;
        pointer-events: auto;
    }

    .lightbox img {
        max-width: 90%;
        max-height: 90%;
        width: 100%;
        height: auto;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.5);
    }

    .lightbox-close {
        position: absolute;
        top: 16px;
        right: 16px;
        background: transparent;
        border: none;
        font-size: 2rem;
        color: var(--light-color);
        cursor: pointer;
        z-index: 1001;
        line-height: 1;
    }

    .lightbox-close svg {
        width: 48px;
        height: auto;
    }

    .lightbox-close:focus {
        outline: 2px solid #fff;
    }

    .full-gallery {
        position: fixed;
        top: 0;
        right: 0;
        width: 100%;
        height: 100vh;
        background: var(--light-color);
        z-index: 2000;
        transform: translateX(100%);
        transition: transform 0.5s cubic-bezier(0, 0, 0.47, 1) 0.25s;
        box-shadow:
            0 19px 38px rgba(0, 0, 0, 0.3),
            0 10px 12px rgba(0, 0, 0, 0.22);
        overflow-y: auto;
        display: flex;
        flex-direction: column;
    }

    .full-gallery.active {
        transform: translateX(0);
    }

    .gallery-header {
        display: flex;
        align-items: center;
        padding: 20px 25px;
        position: sticky;
        top: 0;
        z-index: 10;
    }

    h3 {
        font-size: 28px;
        margin: 120px 0 16px;
    }

    .full-gallery h3 {
        position: sticky;
        top: 120px;
        background: var(--light-color); /* Achtergrond voor overlap */
        z-index: 10;
        padding: 16px 0;
    }

    h3:nth-of-type(1) {
        margin: 0 0 16px;
    }

    .gallery-back {
        display: flex;
        align-items: center;
        gap: 8px;
        background: transparent;
        border: none;
        color: var(--primary-color);
        cursor: pointer;
        font-size: 16px;
        padding: 8px 0;
        margin-right: 20px;
    }

    .gallery-back span {
        transform: rotate(90deg);
        margin-right: 6px;
    }

    .gallery-back:hover {
        opacity: 0.7;
    }

    .gallery-header h2 {
        margin: 0;
        font-size: 1.5rem;
    }

    .gallery-content {
        padding: 40px 25px 120px;
    }

    .grid-container {
        gap: 12px;
    }

