    }
    .grid-container:nth-of-type(7) img:nth-of-type(2) {
        grid-area: 1 / 2 / 2 / 3;
    }

    .see-more-btn {
        display: inline-flex;
        color: var(--primary-color);
        gap: 16px;
        padding: 16px 0 0px;
        align-items: center;
        margin-left: auto;
        margin-right: 4px;
