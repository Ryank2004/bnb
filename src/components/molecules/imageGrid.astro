---
import Arrow from "../atoms/arrow.astro";
---

<section class="image-grid" id="image-grid">
    <h2>Inside the charming apartment</h2>
    <div class="grid">
        <img
            src="/images/lr-4.webp"
            alt="Living room"
            loading="lazy"
            class="thumb"
        />
        <img
            src="/images/bathroom-2.webp"
            alt="Bathroom"
            loading="lazy"
            class="thumb"
        />
        <img
            src="/images/bedroom1-1.webp"
            alt="Bedroom"
            loading="lazy"
            class="thumb"
        />
        <img
            src="/images/bedroom1-2.webp"
            alt="Bedroom"
            loading="lazy"
            class="thumb"
        />
        <img
            src="/images/garden-1.webp"
            alt="Garden"
            loading="lazy"
            class="thumb"
        />
    </div>

    <!-- Lightbox overlay -->
    <div id="lightbox" class="lightbox">
        <button id="lightbox-close" class="lightbox-close" aria-label="Sluiten"
            ><svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="size-6"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="m9.75 9.75 4.5 4.5m0-4.5-4.5 4.5M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"
                ></path>
            </svg>
        </button>
        <img id="lightbox-img" alt="" />
    </div>
    <a class="see-more-btn">show all photos <span><Arrow /></span></a>
</section>

<script is:inline>
    const thumbs = document.querySelectorAll(".image-grid .thumb");
    const lb = document.getElementById("lightbox");
    const lbImg = document.getElementById("lightbox-img");
    const closeBtn = document.getElementById("lightbox-close");

    thumbs.forEach((img) => {
        img.addEventListener("click", () => {
            lbImg.src = img.src;
            lbImg.alt = img.alt;
            lb.classList.add("active");
        });
    });

    lb.addEventListener("click", () => {
        lb.classList.remove("active");
    });

    closeBtn.addEventListener("click", () => {
        lb.classList.remove("active");
    });
</script>

<style>
    .image-grid {
        display: flex;
        flex-direction: column;
        padding: 160px 25px;
    }

    .grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        grid-template-rows: repeat(4, 1fr);
        grid-column-gap: 12px;
        grid-row-gap: 12px;
    }

    img {
        border: solid 1.5px var(--primary-color);
    }

    img:nth-child(1) {
        grid-area: 1 / 1 / 3 / 3;
    }
    img:nth-child(2) {
        grid-area: 3 / 1 / 4 / 2;
    }
    img:nth-child(3) {
        grid-area: 4 / 1 / 5 / 2;
    }
    img:nth-child(4) {
        grid-area: 3 / 2 / 4 / 3;
    }
    img:nth-child(5) {
        grid-area: 4 / 2 / 5 / 3;
    }

    .lightbox {
        position: fixed;
        inset: 0;
        background: rgba(0, 0, 0, 0.8);
        align-items: center;
        justify-content: center;
        cursor: zoom-out;
        z-index: 1000;
        transition:
            opacity 0.2s ease-out,
            visibility 0.2s ease-out;
        opacity: 0;
        visibility: hidden;
        pointer-events: none;
        display: flex;
    }

    .lightbox.active {
        opacity: 1;
        visibility: visible;
        pointer-events: auto;
    }

    .lightbox img {
        max-width: 90%;
        max-height: 90%;
        width: 100%;
        height: auto;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.5);
    }

    .lightbox-close {
        position: absolute;
        top: 16px;
        right: 16px;
        background: transparent;
        border: none;
        font-size: 2rem;
        color: #fffffb;
        cursor: pointer;
        z-index: 1001;
        line-height: 1;
    }

    .lightbox-close svg {
        width: 48px;
        height: auto;
    }

    .lightbox-close:focus {
        outline: 2px solid #fff;
    }

    .see-more-btn {
        display: inline-flex;
        color: var(--primary-color);
        gap: 16px;
        padding: 16px 0 0px;
        align-items: center;
        margin-left: auto;
        margin-right: 4px;
    }

    .see-more-btn span {
        display: inline-flex;
        transform: rotate(-90deg);
        transition: transform 0.5s ease;
    }

    .see-more-btn:hover > span {
        transform:  rotate(0deg);
    }

    .see-more-btn:hover {
        cursor: pointer;
    }

    @media screen and (min-width: 744px) {
        .image-grid {
            padding: 160px 40px;
        }
        .grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            grid-template-rows: repeat(2, 1fr);
            grid-column-gap: 12px;
            grid-row-gap: 12px;
        }

        img:nth-child(1) {
            grid-area: 1 / 1 / 3 / 3;
        }

        img:nth-child(2) {
            grid-area: 1 / 3 / 2 / 4;
        }

        img:nth-child(3) {
            grid-area: 2 / 3 / 3 / 4;
        }

        img:nth-child(4) {
            grid-area: 2 / 4 / 3 / 5;
        }

        img:nth-child(5) {
            grid-area: 1 / 4 / 2 / 5;
        }
    }

    @media screen and (min-width: 1024px) {
        .image-grid {
            padding: 160px 80px;
        }
    }

    @media screen and (min-width: 1224px) {
        .image-grid {
            padding: 240px 120px;
        }
    }

    @media screen and (min-width: 1424px) {
    }
</style>
