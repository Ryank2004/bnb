---
import ImageSlider from "../molecules/imageSlider.astro";
import Arrow from "../atoms/arrow.astro";
import Reviews from "../atoms/reviews.astro";
---

<section class="hero">
    <div class="airbnb-container">
        <Reviews />
        <a
            href="https://www.airbnb.nl/rooms/1196088?check_in=2025-07-23&check_out=2025-07-28&guests=1&adults=1&s=67&unique_share_id=5ddd2a2a-6d0e-47fb-84a3-5c814d03249c"
            class="airbnb-btn">Book at Airbnb</a
        >
    </div>
    <div class="hero-content">
        <div class="image-slider-container">
            <ImageSlider />
        </div>
        <div class="hero-text">
            <h1 class="hero-title">
                Charming Apartment: Moments from Central Amsterdam
            </h1>
            <p>
                A cozy 19th-century retreat on the historic Nieuwendammerdijk.
                Relax in vintage comfort with a spacious bath and unique
                sleeping nooks.
                <a href="#image-grid" class="scroll-down-btn"
                    >scroll down to explore more<span><Arrow /></span></a
                >
            </p>
        </div>
    </div>
</section>

<script is:inline>
    function initHeroAnimation() {
        if (!window.lenisReady || !window.gsap || !window.SplitType) {
            setTimeout(initHeroAnimation, 100);
            return;
        }

        console.log("ðŸŽ­ Starting complete hero animations...");

        // ===================================
        // ðŸŽ¯ TEXT REVEAL ANIMATIE (bestaande code)
        // ===================================

        // SplitType text splitting
        const animatingTitle = new window.SplitType(".hero-title", {
            types: "lines, words",
            lineClass: "line",
        });

        // Create line wrappers voor masking
        animatingTitle.lines.forEach((line) => {
            const wrapper = document.createElement("div");
            wrapper.classList.add("line-wrapper-title");
            line.parentNode.insertBefore(wrapper, line);
            wrapper.appendChild(line);

            // Voeg reveal overlay toe
            const overlay = document.createElement("div");
            overlay.classList.add("reveal-overlay");
            overlay.classList.add("texture-image");
            wrapper.appendChild(overlay);
        });

        // Maak titel zichtbaar
        window.gsap.set(".hero-title", {
            opacity: 1,
            visibility: "visible",
        });

        // Tekst op normale positie
        window.gsap.set(".line", {
            y: 0,
        });

        // ===================================
        // ðŸŽ¬ SET INITIAL STATES (alle elementen onzichtbaar)
        // ===================================

        // ImageSlider - start transparant
        window.gsap.set(".hero-content > *:first-child", {
            opacity: 0,
        });

        // Reviews en Airbnb button - start boven scherm
        window.gsap.set(".airbnb-container > *", {
            opacity: 0,
            y: -30,
        });

        // Paragraph met link - start onder scherm
        window.gsap.set(".hero-text p", {
            opacity: 0,
            y: 30,
        });

        // ===================================
        // ðŸŽ­ ANIMATIE TIMELINE
        // ===================================

        // Master timeline voor alle animaties
        const heroTimeline = window.gsap.timeline({
            delay: 0.2, // Start delay na splash screen
        });

        // 1. TEXT REVEAL (0s - 1.1s)
        heroTimeline.to(
            ".reveal-overlay",
            {
                x: "110%",
                duration: 1.2,
                ease: "power3.out",
                stagger: {
                    amount: 0.3,
                    from: "start",
                },
            },
            0,
        );

        // 2. REVIEWS & AIRBNB BUTTON - van boven invliegen (0.4s)
        heroTimeline.to(
            ".airbnb-container > *",
            {
                opacity: 1,
                y: 0,
                duration: 1,
                ease: "power2.out",
            },
            0.3,
        );

        // 3. IMAGE SLIDER - fade in (0.6s)
        heroTimeline.to(
            ".hero-content > *:first-child",
            {
                opacity: 1,
                duration: 1,
                ease: "power2.out",
            },
            0.4,
        );

        // 4. PARAGRAPH - van onder invliegen (1.0s)
        heroTimeline.to(
            ".hero-text p",
            {
                opacity: 1,
                y: 0,
                duration: 1,
                ease: "power2.out",
            },
            0.8,
        );

        console.log("âœ… Complete hero animations initialized");
    }

    // ===================================
    // ðŸš€ START ANIMATIE
    // ===================================

    document.addEventListener("lenisReady", initHeroAnimation);

    if (window.lenisReady) {
        initHeroAnimation();
    }

    setTimeout(() => {
        if (window.gsap && !document.querySelector(".reveal-overlay")) {
            console.log("ðŸ”„ Fallback: Starting hero animation via timeout");
            initHeroAnimation();
        }
    }, 2000);
</script>

<style>
    .hero {
        margin-top: 25px;
    }

    .hero-content {
        padding-top: 50px;
    }

    .hero-text {
        padding: 50px 25px 0;
        display: flex;
        flex-direction: column;
    }

    h1 {
        max-width: 330px;
        opacity: 0; /* Verberg tekst initieel */
        visibility: hidden;
    }

    p {
        padding: 24px 0 0;
        max-width: 320px;
        margin-left: auto;
    }

    .scroll-down-btn {
        display: inline-flex;
        color: var(--primary-color);
        gap: 16px;
        padding: 16px 0 0px;
        align-items: center;
    }

    .scroll-down-btn:hover {
        opacity: 0.7;
    }

    a span {
        display: flex;
        animation: bounce 2s infinite;
    }

    @keyframes bounce {
        0%,
        20%,
        50%,
        80%,
        100% {
            transform: translateY(0);
        }
        40% {
            transform: translateY(-5px);
        }
        60% {
            transform: translateY(-2.5px);
        }
    }

    .airbnb-container {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0 25px;
    }

    .airbnb-btn {
        display: inline-flex;
        color: white;
        position: fixed;
        right: 25px;
        padding: 14px 20px;
        border-radius: 12px;
        line-height: 1;
        z-index: 12;
        box-shadow:
            0 19px 38px rgba(0, 0, 0, 0.3),
            0 10px 12px rgba(0, 0, 0, 0.22);
        white-space: nowrap;
        background-size: 300%;
        transition: background-position 0.6s;
        background-image: linear-gradient(
            90deg,
            var(--secondairy-color) 50%,
            var(--primary-color) 50%
        );
    }

    .airbnb-btn:hover {
        color: #fff;
        background-position: 100%;
    }

    /* LINE WRAPPER VOOR MASKING */
    :global(.line-wrapper-title) {
        position: relative;
        overflow: hidden; /* Belangrijk: verberg overlays */
        display: inline-block;
        width: 100%;
    }

    /* TEKST OP NORMALE POSITIE */
    :global(.line) {
        display: inline-block;
        position: relative;
        z-index: 1;
    }

    /* REVEAL OVERLAY */
    :global(.reveal-overlay) {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: var(--light-color);
        z-index: 2;
        transform: translateX(0); /* Start positie: bedekt tekst */
    }

    @media screen and (min-width: 544px) {
        .hero-text {
            padding: 40px 40px 0;
        }

        .airbnb-btn {
            right: 40px;
        }

        .airbnb-container {
            padding: 0 40px;
        }
    }

    @media screen and (min-width: 744px) {
        .hero {
            margin-top: 50px;
        }

        h1 {
            max-width: 430px;
        }

        .airbnb-container {
            padding: 0 220px;
            justify-content: end;
        }
    }

    @media screen and (min-width: 1024px) {
        .hero-text {
            padding: 60px 80px 0;
        }

        .airbnb-container {
            padding: 0 280px;
        }

        .airbnb-btn {
            right: 80px;
        }
    }

    @media screen and (min-width: 1224px) {
        .hero-text {
            padding: 60px 120px 0;
            flex-direction: row-reverse;
        }

        p {
            max-width: 460px;
            margin-left: 0;
            margin-right: auto;
            padding-top: 160px;
        }

        .airbnb-container {
            padding: 0 320px;
        }

        .airbnb-btn {
            right: 120px;
        }

        h1 {
            max-width: 650px;
            min-width: 580px;
            padding-left: 48px;
        }
    }

    @media screen and (min-width: 1424px) {
        h1 {
            padding-left: 0;
        }

        p {
            padding-top: 120px;
        }
    }
</style>

