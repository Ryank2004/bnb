---
import ImageSlider from "../molecules/imageSlider.astro";
import Arrow from "../atoms/arrow.astro";
import Reviews from "../atoms/reviews.astro";
---

<section class="hero">
    <div class="airbnb-container">
        <Reviews />
        <a
            href="https://www.airbnb.nl/rooms/1196088?check_in=2025-07-23&check_out=2025-07-28&guests=1&adults=1&s=67&unique_share_id=5ddd2a2a-6d0e-47fb-84a3-5c814d03249c"
            class="airbnb-btn">Book at Airbnb</a
        >
    </div>
    <div class="hero-content">
        <ImageSlider />
        <div class="hero-text">
            <h1>Charming Apartment: Moments from Central Amsterdam</h1>
            <p>
                A cozy 19th-century retreat on the historic Nieuwendammerdijk.
                Relax in vintage comfort with a spacious bath and unique
                sleeping nooks.
                <a class="scroll-down-btn"
                    >scroll down to explore more<span><Arrow /></span></a
                >
            </p>
        </div>
    </div>
</section>

<style>
    .hero {
        margin-top: 25px;
    }

    .hero-content {
        padding-top: 50px;
    }

    .hero-text {
        padding: 50px 25px 0;
        display: flex;
        flex-direction: column;
    }

    h1 {
        max-width: 330px;
    }

    p {
        padding: 24px 0 0;
        max-width: 320px;
        margin-left: auto;
    }

    .scroll-down-btn {
        display: inline-flex;
        color: var(--primary-color);
        gap: 16px;
        padding: 16px 0 0px;
        align-items: center;
    }

    a span {
        display: flex;
        animation: bounce 2s infinite;
    }

    @keyframes bounce {
        0%,
        20%,
        50%,
        80%,
        100% {
            transform: translateY(0);
        }
        40% {
            transform: translateY(-5px);
        }
        60% {
            transform: translateY(-2.5px);
        }
    }

    .airbnb-container {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0 25px;
    }

    .airbnb-btn {
        display: inline-flex;
        color: white;
        position: fixed;
        right: 25px;
        padding: 14px 20px;
        border-radius: 12px;
        line-height: 1;
        z-index: 12;
        white-space: nowrap;
        background-size: 300%;
        transition: background-position 0.6s;
        background-image: linear-gradient(
            90deg,
            var(--secondairy-color) 50%,
            var(--primary-color) 50%
        );
    }

    .airbnb-btn:hover {
        color: #fff;
        background-position: 100%;
    }

    @media screen and (min-width: 744px) {
        .hero {
            margin-top: 50px;
        }

        .hero-text {
            padding: 40px 40px 0;
        }

        .airbnb-container {
            padding: 0 220px;
            justify-content: end;
        }

        .airbnb-btn {
            right: 40px;
        }

        h1 {
            max-width: 430px;
        }
    }

    @media screen and (min-width: 1024px) {
        .hero-text {
            padding: 60px 80px 0;
        }

        .airbnb-container {
            padding: 0 280px;
        }

        .airbnb-btn {
            right: 80px;
        }
    }

    @media screen and (min-width: 1224px) {
        .hero-text {
            padding: 60px 120px 0;
            flex-direction: row-reverse;
        }

        p {
            max-width: 460px;
            margin-left: 0;
            margin-right: auto;
            padding-top: 160px;
        }

        .airbnb-container {
            padding: 0 320px;
        }

        .airbnb-btn {
            right: 120px;
        }

        h1 {
            max-width: 650px;
            min-width: 580px;
            padding-left: 48px;
        }
    }

    @media screen and (min-width: 1424px) {
        h1 {
            padding-left: 0;
        }

        p {
            padding-top: 120px;
        }
    }
</style>
