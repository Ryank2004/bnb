---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/organisms/hero.astro";
import ImageGrid from "../components/molecules/imageGrid.astro";
import About from "../components/molecules/about.astro";
import Bedrooms from "../components/molecules/bedrooms.astro";
import Facilities from "../components/molecules/facilities.astro";
import Safety from "../components/molecules/safety.astro";
import Location from "../components/molecules/location.astro";
import Rules from "../components/molecules/rules.astro";
import Contact from "../components/molecules/contact.astro";
import BackgroundTexture from "../components/atoms/backgroundTexture.astro";
---

<Layout>
	<!-- Logo Splash Screen -->
	<div class="splash-screen" id="splashScreen">
		<BackgroundTexture />
		<div class="logo-container">
			<div class="logo">
				<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
					<path stroke-linecap="round" stroke-linejoin="round" d="M8.25 21v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21m0 0h4.5V3.545M12.75 21h7.5V10.75M2.25 21h1.5m18 0h-18M2.25 9l4.5-1.636M18.75 3l-1.5.545m0 6.205 3 1m1.5.5-1.5-.5M6.75 7.364V3h-3v18m3-13.636 10.5-3.819" />
				  </svg>				  
			</div>
		</div>

		<!-- Flash overlay -->
		<div class="flash-overlay"></div>
	</div>

	<!-- Main Content -->
	<div class="main-content" id="mainContent">
		<Hero />
		<ImageGrid />
		<div class="horizontal">
			<About />
			<Bedrooms />
		</div>
		<div class="horizontal">
			<Facilities />
			<Safety />
		</div>
		<Location />
		<div class="horizontal">
			<Rules />
			<Contact />
		</div>
	</div>
</Layout>

<style>
	.splash-screen {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100dvh;
		background: #fffffb;
		display: flex;
		justify-content: center;
		align-items: center;
		z-index: 9999;
		animation: splashOut 0.1s ease-in-out 1.4s forwards;
	}

	.logo-container {
		position: relative;
		opacity: 0;
		animation: logoReveal 0.1s ease-out 0.2s forwards;
	}

	.logo {
		width: 40px;
		height: 40px;
		display: flex;
		align-items: center;
		justify-content: center;
		animation: logoSting 0.7s ease-out 0.2s forwards;
	}

	.logo svg {
		width: 100%;
		height: 100%;
		transition: all 0.3s ease;
	}

	.flash-overlay {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: #ffffff;
		opacity: 0;
		pointer-events: none;
		animation: quickFlash 0.1s ease-out 1.3s forwards;
	}

	.main-content {
		opacity: 0;
		animation: fadeInContent 0.8s ease-out 1.4s forwards;
	}
	
	.horizontal {
		display: flex;
		flex-direction: column;
	}

	@media screen and (min-width: 768px) {
		.logo,
		.text-logo {
			width: 60px;
			height: 60px;
		}
	}

	@media screen and (min-width: 1024px) {
		.horizontal {
			flex-direction: row;
			padding-bottom: 160px;
		}
		.horizontal:nth-of-type(2) {
			justify-content: space-between;
		}
	}

	@media screen and (min-width: 1224px) {
		.horizontal {
			padding-bottom: 240px;
		}
	}

	/* Animations */
	@keyframes logoReveal {
		to {
			opacity: 1;
		}
	}

	@keyframes logoSting {
		40% {
			transform: scale(2.2);
		}

		60% {
			transform: scale(2.2);
		}
		100% {
			transform: scale(2);
		}
	}

	@keyframes quickFlash {
		0% {
			opacity: 0;
		}
		50% {
			opacity: 1;
		}
		100% {
			opacity: 0;
		}
	}

	@keyframes splashOut {
		to {
			opacity: 0;
			visibility: hidden;
		}
	}

	@keyframes fadeInContent {
		to {
			opacity: 1;
		}
	}
</style>

<script>
	document.addEventListener("DOMContentLoaded", function () {
		// Cleanup na animatie
		setTimeout(() => {
			const splash = document.getElementById("splashScreen");
			if (splash) {
				splash.style.display = "none";
			}
		}, 1800);
	});
</script>
